@page "/Identity/Account/Logout"
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<PageTitle>@ViewData["Title"]</PageTitle>

<link rel="stylesheet" href="~/css/identity.css" />

<div class="identity-container">
    <div class="identity-card">
        <header>
            <h2>@ViewData["Title"]</h2>
            @{
                if (User.Identity?.IsAuthenticated == true)
                {
                    <form class="text-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })">
                        <p class="mb-3">Are you sure you want to log out?</p>
                        <button type="submit" class="btn mud-btn-primary">Logout</button>
                    </form>
                }
                else
                {
                    <p class="text-center">You have successfully logged out of the application.</p>
                    <div class="text-center mt-3">
                        <a href="/" class="mud-link">Return to Home</a>
                    </div>
                }
            }
        </header>
    </div>
</div>