@page "/Identity/Account/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Join Mordecai MUD";
}

<PageTitle>@ViewData["Title"]</PageTitle>

<link rel="stylesheet" href="~/css/identity.css" />

<div class="identity-container">
    <div class="identity-card">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create Your Adventurer</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control mud-form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control mud-form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control mud-form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <button id="registerSubmit" type="submit" class="btn mud-btn-primary btn-lg">Register</button>
            </div>
            <div class="text-center mt-3">
                <p>
                    Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="mud-link">Sign in here</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}