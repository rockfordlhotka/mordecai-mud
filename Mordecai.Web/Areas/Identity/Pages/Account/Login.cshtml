@page "/Identity/Account/Login"
@model LoginModel

@{
    ViewData["Title"] = "Login to Mordecai MUD";
}

<PageTitle>@ViewData["Title"]</PageTitle>

<link rel="stylesheet" href="~/css/identity.css" />

<div class="identity-container">
    <div class="identity-card">
        <section>
            <form id="account" method="post">
                <h2>Enter the Realm</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control mud-form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control mud-form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="d-grid">
                    <button id="login-submit" type="submit" class="btn mud-btn-primary btn-lg">Log in</button>
                </div>
                <div class="text-center mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="mud-link">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="mud-link">Register as a new adventurer</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="mud-link">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}